<style>
body {
    font-family: Roboto,Helvetica,Arial,sans-serif;
    background-color: #f5f5f5;
}
.mdl-layout {
  align-items: center;
  justify-content: center;
}
.mdl-layout__content {
  padding: 24px;
  flex: none;
}
.mdl-card__actions {
  text-align: right;
}
.loader {
  position: absolute;
  //width: $width;
  //height: $width;
  left: 50%;
  top: 50%;
}
.loader-body {
   display: flex;
   align-items: center;
   justify-content: center;
   width: 100%;
    height: 100%;
    z-index: 1000;
    position: absolute;
    min-height: 100%;
